import java.util.Scanner;

public class PrelimGradingSystem {

    public static void main(String[] args) {

        Scanner input = new Scanner(System.in);

        System.out.print("Enter Attendance Score (0â€“100): ");
        double attendance = input.nextDouble();

        System.out.print("Enter Lab Work 1 Grade: ");
        double lab1 = input.nextDouble();

        System.out.print("Enter Lab Work 2 Grade: ");
        double lab2 = input.nextDouble();

        System.out.print("Enter Lab Work 3 Grade: ");
        double lab3 = input.nextDouble();

        // Lab Work Average
        double labAverage = (lab1 + lab2 + lab3) / 3;

        // Class Standing
        double classStanding =
                (attendance * 0.40) +
                (labAverage * 0.60);

        // Required Prelim Exam
        double passingExam = (75 - (classStanding * 0.70)) / 0.30;
        double excellentExam = (100 - (classStanding * 0.70)) / 0.30;

        System.out.println("\n--- PRELIM GRADE COMPUTATION ---");
        System.out.printf("Attendance Score: %.2f%n", attendance);
        System.out.printf("Lab Work Average: %.2f%n", labAverage);
        System.out.printf("Class Standing: %.2f%n", classStanding);

        System.out.printf("\nRequired Prelim Exam to PASS (75): %.2f%n", passingExam);
        System.out.printf("Required Prelim Exam for EXCELLENT (100): %.2f%n", excellentExam);

        if (passingExam > 100) {
            System.out.println("\nRemarks: Passing grade is NOT achievable.");
        } else {
            System.out.println("\nRemarks: Passing grade is achievable.");
        }

        input.close();
    }
}
